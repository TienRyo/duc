<html>
<head>
    <title>Detail</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="/script.js"></script>
</head>
<body>
<div class="container-fluid">
    <div class="page-header"><h1 class="text-center">{{intern.getName()}}</h1></div>
    <ul>
        <li> <a href="/">Home</a> </li>
    </ul>
    <form>
        <div class="form-group col-md-3">
            <label>Name</label>
            <br>
            <input class="form-control" name="name" id="name" value="{{intern.getName()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Address</label>
            <br>
            <input class="form-control" type="text" name="address" id="address" value="{{intern.getAddress()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Status</label>
            <br>
            <input class="form-control" type="text" name="status" id="status" value="{{intern.getStatus()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Gender</label>
            <br>
            <input class="form-control" type="text" name="gender" id="gender" value="{{intern.getGender()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Phone</label>
            <br>
            <input class="form-control" type="text" name="phone" id="phone" value="{{intern.getPhone()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Email</label>
            <br>
            <input class="form-control" type="text" name="Email" id="Email" value="{{intern.getEmail()}}">
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
    <form action="" method="get">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-success" id="delete">Delete</button>
        </div>
    </form>
</div>
</body>
</html>